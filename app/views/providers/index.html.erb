
<% @provider.in_groups_of(4, false).each do |group| %>
  <div class='row'>
    <% group.each do |p| %>
      <div class='col-md-3'>
        <h3 class="text-center">
          <%= link_to p.name %>
        </h3>
        <p class="text-center">
          <%= p.price %>
        </p>
        <p class="text-center">
          <%= p.term %>
        </p>
      </div>
    <% end %>
  </div>
<% end %>