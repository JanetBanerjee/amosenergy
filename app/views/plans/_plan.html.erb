
    <div class="col-xs-5 col-xs-offset-1">
      <h1>Sign In</h1>
        <div class="well">
          <%= bootstrap_form_for(:user, :url => session_path(:user)) do |f| %>
            <%= f.text_field :email %>
            <%= f.password_field :password %>
            <%= f.check_box :remember_me %>
            <%= f.submit 'Sign in' %>
            <%= link_to "Forgot your password?", new_password_path(:user) %>
          <% end %>
        </div>
      </div>
    <div class="col-xs-5">
        <h1>Sign Up</h1>
        <div class="well">
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.email_field :email %>

        <%= f.text_field :first_name %>

        <%= f.text_field :last_name %>

        <%= f.text_field :address %>

        <%= f.text_field :city %>

        <%= f.text_field :state %>

        <%= f.text_field :zip %>

        <%= f.text_field :phone_number %>

        <%= f.text_field :mobile_number %>

        <%= f.text_field :work_number %>

        <%= f.text_field :mailing_address %>

        <%= f.text_field :mailing_city %>

        <%= f.text_field :mailing_state %>

        <%= f.text_field :mailing_zip %>

        <%= f.date_field :birthdate %>

        <%= f.text_field :license, label: "Last 4 digits of License" %>

        <%= f.select :language, [["English"], ["Spanish"]] %>

        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>

        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

    </div>
  </div>
</div>





